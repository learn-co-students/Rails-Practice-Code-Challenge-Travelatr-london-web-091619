<h1>Post</h1>
<%= form_for @post do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :content %><br>
<%= f.text_area :content %><br><br>
<%= f.label "Which blogger are you?" %><br>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %><br><br>
<%= f.label :destination %><br>
<%= f.collection_select :destination_id, @destinations, :id, :name %><br><br>
<%= f.submit %>
<% end %>
