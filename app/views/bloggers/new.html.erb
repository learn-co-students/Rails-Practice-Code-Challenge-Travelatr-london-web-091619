<h1>Create new Blogger</h1>

<% if @blogger.errors.any? %>
    <p>Sorry, your blogger could not be saved due to the following reasons:</p>
    <% @blogger.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
<% end %>
<br>
<%= form_for @blogger do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :age %><br>
    <%= f.number_field :age %><br>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %><br>
    <%= f.submit %>
<% end %>



