<h1>Create Blogger</h1>

<% if @blogger.errors %>
    <ul>
    <% @blogger.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    <ul>
<% end %>

<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :bio %>
    <%= f.text_area :bio %><br>
    <%= f.label :age %>
    <%= f.number_field :age %><br>

    <%= f.submit %>
<% end %>
