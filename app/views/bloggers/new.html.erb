<%= form_tag("/bloggers") do %>
  <% if @blogger.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @blogger.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%end%>


<h1> Create a new blogger </h1>
<%=form_for(@blogger) do |f|%>

<%= f.label :name, 'Your Name'%>
<%=f.text_field :name%><br><br>

<%= f.label :bio, 'Your Bio'%>
<%=f.text_area :bio%><br><br>

<%= f.label :age, 'Your Age'%>
<%=f.number_field :age%><br>

<%=f.submit%>
<%end%>