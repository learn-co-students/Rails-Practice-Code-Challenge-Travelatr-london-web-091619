<% if @blogger.errors.any? %>
<div id="error_explanation">
<h2>There were some errors: </h2>
<ul>
  <% @blogger.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
</div>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :age %><br>
<%= f.number_field :age %><br>
<%= f.label :bio %><br>
<%= f.text_area :bio %><br>
<%= f.submit %><br>
<% end %>
